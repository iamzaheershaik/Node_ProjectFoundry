<!-- ============================================================== -->
<!-- My Profile Page -->
<!-- ============================================================== -->

<!-- Bread crumb -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            <h4 class="page-title">My Profile</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">My Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->

<!-- Container fluid -->
<div class="container-fluid">

    <!-- Flash Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>

    <!-- Row -->
    <div class="row">

        <!-- Profile Card (Left) -->
        <div class="col-lg-4 col-xlg-3">
            <div class="card">
                <div class="card-body text-center">
                    <% if (typeof user !== 'undefined' && user.profileImage) { %>
                        <img src="<%= user.profileImage %>" alt="<%= user.firstname %>" class="rounded-circle" width="150" height="150" style="object-fit: cover; border: 4px solid #7460ee;">
                    <% } else { %>
                        <img src="/assets/images/users/profile.png" alt="Default Avatar" class="rounded-circle" width="150" height="150" style="object-fit: cover; border: 4px solid #7460ee;">
                    <% } %>

                    <h4 class="card-title mt-3 mb-1"><%= user.firstname %> <%= user.lastname %></h4>
                    <h6 class="card-subtitle text-muted"><%= user.email %></h6>

                    <!-- Gender Badge -->
                    <div class="mt-3">
                        <% if (user.gender === 'Male') { %>
                            <span class="badge badge-info badge-pill px-3 py-2">
                                <i class="fas fa-mars mr-1"></i> Male
                            </span>
                        <% } else if (user.gender === 'Female') { %>
                            <span class="badge badge-pill px-3 py-2" style="background-color: #e83e8c; color: #fff;">
                                <i class="fas fa-venus mr-1"></i> Female
                            </span>
                        <% } %>
                    </div>

                    <div class="mt-3">
                        <a href="/change-password" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-key mr-1"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Details (Right) -->
        <div class="col-lg-8 col-xlg-9">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">My Information</h4>
                    <h6 class="card-subtitle mb-3 text-muted">Your profile details.</h6>
                    <hr>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th width="30%" class="bg-light">
                                        <i class="fas fa-user text-primary mr-2"></i> First Name
                                    </th>
                                    <td><%= user.firstname %></td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <i class="fas fa-user text-primary mr-2"></i> Last Name
                                    </th>
                                    <td><%= user.lastname %></td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <i class="fas fa-envelope text-info mr-2"></i> Email Address
                                    </th>
                                    <td><%= user.email %></td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <i class="fas fa-venus-mars text-warning mr-2"></i> Gender
                                    </th>
                                    <td><%= user.gender || 'Not specified' %></td>
                                </tr>
                                <tr>
                                    <th class="bg-light">
                                        <i class="fas fa-phone text-success mr-2"></i> Mobile Number
                                    </th>
                                    <td><%= user.mobileNo || 'Not provided' %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <hr>

                    <!-- Action Buttons -->
                    <div class="form-group mb-0">
                        <a href="/change-password" class="btn btn-primary mr-2">
                            <i class="fas fa-key mr-1"></i> Change Password
                        </a>
                        <a href="/dashboard" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
                        </a>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!-- End Row -->

</div>
<!-- End Container fluid -->